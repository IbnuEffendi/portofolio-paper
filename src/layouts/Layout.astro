---
import "../styles/global.css";
interface Props { title: string; }
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Lora:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <title>{title}</title>

        <script is:inline>
            const theme = (() => {
                if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                    return localStorage.getItem('theme');
                }
                if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    return 'dark';
                }
                return 'light';
            })();
            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        </script>
    </head>
    
    <body class="bg-paper text-ink font-sans antialiased relative min-h-screen overflow-x-hidden transition-colors duration-500">
        
        <!-- THEME TOGGLE -->
        <button id="theme-toggle" class="fixed top-6 right-6 z-50 p-3 rounded-full bg-paper border border-ink/20 text-ink hover:border-accent hover:text-accent transition-all duration-300 shadow-lg group cursor-pointer">
            <i class='bx bx-sun text-xl hidden dark:block animate-spin-slow'></i>
            <i class='bx bx-moon text-xl block dark:hidden group-hover:-rotate-12 transition-transform'></i>
        </button>

        <!-- BACKGROUND LAYERS -->
        <div class="fixed inset-0 pointer-events-none z-0">
            <!-- 1. Grid Pattern -->
            <div class="bg-grid-pattern opacity-100"></div>
            
            <!-- 2. Highlight Grid (Senter/Riak) -->
            <canvas id="grid-highlight-canvas" class="absolute inset-0 z-0"></canvas>
            
            <!-- 3. Circuit Ular (Di bawah Noise) -->
            <canvas id="circuit-canvas" class="absolute inset-0 opacity-[0.8] z-0"></canvas>

            <!-- 4. Noise Texture -->
            <div class="bg-noise"></div>
            
            <!-- 5. Vignette -->
            <div class="bg-vignette"></div>
        </div>

        <!-- TECHNICAL RULER (INTERACTIVE) -->
        <div class="fixed inset-0 pointer-events-none z-20 p-4 sm:p-6">
            <div id="tech-frame" class="relative w-full h-full border border-ink/10 rounded-sm transition-colors duration-500 overflow-hidden">
                <!-- Ruler Tracks (Background Scan Animation) -->
                <div class="absolute top-0 left-0 w-full h-[10px] bg-ruler-x opacity-30 animate-scan-x"></div>
                <div class="absolute bottom-0 left-0 w-full h-[10px] bg-ruler-x opacity-30 animate-scan-x"></div>
                <div class="absolute top-0 left-0 h-full w-[10px] bg-ruler-y opacity-30 animate-scan-y"></div>
                <div class="absolute top-0 right-0 h-full w-[10px] bg-ruler-y opacity-30 animate-scan-y"></div>
                
                <!-- Interactive Markers (Mengikuti Mouse) -->
                <div id="marker-top" class="absolute top-0 w-[2px] h-3 bg-accent/80 z-30 transition-transform duration-75 ease-linear -translate-x-1/2" style="left: 0;"></div>
                <div id="marker-bottom" class="absolute bottom-0 w-[2px] h-3 bg-accent/80 z-30 transition-transform duration-75 ease-linear -translate-x-1/2" style="left: 0;"></div>
                <div id="marker-left" class="absolute left-0 h-[2px] w-3 bg-accent/80 z-30 transition-transform duration-75 ease-linear -translate-y-1/2" style="top: 0;"></div>
                <div id="marker-right" class="absolute right-0 h-[2px] w-3 bg-accent/80 z-30 transition-transform duration-75 ease-linear -translate-y-1/2" style="top: 0;"></div>

                <!-- Corners -->
                <div class="absolute top-0 left-0 w-4 h-4 border-t-2 border-l-2 border-accent transition-colors duration-500"></div>
                <div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-accent transition-colors duration-500"></div>
                <div class="absolute bottom-0 left-0 w-4 h-4 border-b-2 border-l-2 border-accent transition-colors duration-500"></div>
                <div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-accent transition-colors duration-500"></div>

                <!-- Info Labels -->
                <div class="absolute top-3 left-4 text-[9px] font-mono text-ink/30 tracking-widest transition-colors duration-500">SYS.RDY // 2026</div>
                
                <!-- Dynamic Coordinates -->
                <div class="absolute bottom-3 right-4 text-[9px] font-mono text-accent/80 tracking-widest transition-colors duration-500 tabular-nums">
                    <span id="coords-display">X: 0000 Y: 0000</span>
                </div>
            </div>
        </div>

        <!-- CONTENT -->
        <div class="relative z-30 px-10 sm:px-20 py-16">
            <slot />
        </div>

        <!-- SCRIPT -->
        <script>
            // --- KONFIGURASI WARNA SEDERHANA ---
            const COLORS = {
                light: { paper: '245, 245, 240', accent: '47, 79, 79' },  // #F5F5F0, #2F4F4F
                dark: { paper: '15, 23, 42', accent: '56, 189, 248' }     // #0F172A, #38BDF8
            };

            function getActiveColors() {
                const isDark = document.documentElement.classList.contains('dark');
                return isDark ? COLORS.dark : COLORS.light;
            }

            let activeTheme = getActiveColors();

            // Toggle Handler
            const themeToggleBtn = document.getElementById('theme-toggle');
            themeToggleBtn?.addEventListener("click", () => {
                document.documentElement.classList.toggle("dark");
                const isDark = document.documentElement.classList.contains("dark");
                localStorage.setItem("theme", isDark ? "dark" : "light");
                
                // Update warna JS
                activeTheme = getActiveColors();
                
                // Reset canvas
                if(gCtx) gCtx.clearRect(0, 0, window.innerWidth, window.innerHeight);
                if(cCtx) cCtx.clearRect(0, 0, window.innerWidth, window.innerHeight);
            });

            // === SCROLL ANIMATION OBSERVER (FIXED) ===
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1 // Trigger saat 10% elemen terlihat
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('reveal-visible');
                        observer.unobserve(entry.target); // Stop observing after reveal
                    }
                });
            }, observerOptions);

            // Jalankan saat DOM siap
            window.addEventListener('load', () => {
                // Target elements: Sections, Articles (Cards), and anything with .reveal-auto class
                const animatedElements = document.querySelectorAll('section, article, .reveal-auto');
                animatedElements.forEach((el, index) => {
                    el.classList.add('reveal-hidden');
                    // Add staggered delay for grid items to make it look cool
                    if (el.tagName === 'ARTICLE') {
                        // Calculate delay based on index relative to grid logic
                         // Simple stagger based on index
                        (el as HTMLElement).style.transitionDelay = `${(index % 5) * 100}ms`;
                    }
                    observer.observe(el);
                });
            });


            // === RULER INTERACTION ===
            const markerTop = document.getElementById('marker-top');
            const markerBottom = document.getElementById('marker-bottom');
            const markerLeft = document.getElementById('marker-left');
            const markerRight = document.getElementById('marker-right');
            const coordsDisplay = document.getElementById('coords-display');
            const techFrame = document.getElementById('tech-frame');

            function updateRuler(e: MouseEvent) {
                if (!techFrame) return;
                
                const rect = techFrame.getBoundingClientRect();
                
                // Calculate position relative to the technical frame
                const relX = e.clientX - rect.left;
                const relY = e.clientY - rect.top;

                // Clamp values to stay inside frame visually
                const clampX = Math.max(0, Math.min(rect.width, relX));
                const clampY = Math.max(0, Math.min(rect.height, relY));

                // Update Markers
                if(markerTop) markerTop.style.transform = `translateX(${clampX}px)`;
                if(markerBottom) markerBottom.style.transform = `translateX(${clampX}px)`;
                if(markerLeft) markerLeft.style.transform = `translateY(${clampY}px)`;
                if(markerRight) markerRight.style.transform = `translateY(${clampY}px)`;

                // Update Coordinates Text
                if (coordsDisplay) {
                    // Format numbers to be 4 digits (e.g. 0120)
                    const xStr = Math.round(clampX).toString().padStart(4, '0');
                    const yStr = Math.round(clampY).toString().padStart(4, '0');
                    coordsDisplay.innerText = `X: ${xStr} Y: ${yStr}`;
                }
            }


            // === CANVAS 1: GRID HIGHLIGHT & RIPPLES ===
            const gCanvas = document.getElementById('grid-highlight-canvas') as HTMLCanvasElement;
            const gCtx = gCanvas.getContext('2d');
            let gWidth = window.innerWidth;
            let gHeight = window.innerHeight;
            
            let mouse = { x: -1000, y: -1000 };
            let trail = { x: -1000, y: -1000 };
            
            let ambient = { 
                x: Math.random() * window.innerWidth, 
                y: Math.random() * window.innerHeight,
                vx: (Math.random() - 0.5) * 2,
                vy: (Math.random() - 0.5) * 2
            };
            
            let ripples = []; 
            let time = 0;
            let randomBreathOffset = 0;
            const gridSize = 40; 

            function resizeGrid() {
                gWidth = window.innerWidth;
                gHeight = window.innerHeight;
                gCanvas.width = gWidth;
                gCanvas.height = gHeight;
            }
            window.addEventListener('resize', resizeGrid);
            resizeGrid();

            window.addEventListener('mousemove', (e) => { 
                mouse.x = e.clientX; 
                mouse.y = e.clientY; 
                updateRuler(e); // Update ruler markers
            });
            
            // KLIK UNTUK MEMBUAT RIAK (Classic Ripple)
            window.addEventListener('mousedown', (e) => {
                ripples.push({
                    x: e.clientX,
                    y: e.clientY,
                    radius: 0,
                    alpha: 0.8
                });
            });

            function lerp(start: number, end: number, factor: number) { return start + (end - start) * factor; }

            function resetAmbient() {
                const side = Math.floor(Math.random() * 4); 
                const speed = 1.5 + Math.random();
                switch(side) {
                    case 0: ambient.x = Math.random() * gWidth; ambient.y = -200; ambient.vx = (Math.random() - 0.5); ambient.vy = speed; break;
                    case 1: ambient.x = gWidth + 200; ambient.y = Math.random() * gHeight; ambient.vx = -speed; ambient.vy = (Math.random() - 0.5); break;
                    case 2: ambient.x = Math.random() * gWidth; ambient.y = gHeight + 200; ambient.vx = (Math.random() - 0.5); ambient.vy = -speed; break;
                    case 3: ambient.x = -200; ambient.y = Math.random() * gHeight; ambient.vx = speed; ambient.vy = (Math.random() - 0.5); break;
                }
            }

            function drawGridHighlight() {
                if (!gCtx) return;
                gCtx.clearRect(0, 0, gWidth, gHeight);
                
                trail.x = lerp(trail.x, mouse.x, 0.12);
                trail.y = lerp(trail.y, mouse.y, 0.12);
                
                ambient.x += ambient.vx;
                ambient.y += ambient.vy;

                if (ambient.x < -300 || ambient.x > gWidth + 300 || ambient.y < -300 || ambient.y > gHeight + 300) {
                    resetAmbient();
                }

                time += 0.05; 
                randomBreathOffset += (Math.random() - 0.5) * 0.1;

                const renderLightSource = (cx: number, cy: number, baseRadius: number, intensityMult: number) => {
                    const breath = Math.sin(time + randomBreathOffset) * (baseRadius * 0.15); 
                    const jitter = Math.sin(time * 3) * 5; 
                    const currentRadius = baseRadius + breath + jitter; 
                    const startCol = Math.floor((cx - currentRadius) / gridSize);
                    const endCol = Math.ceil((cx + currentRadius) / gridSize);
                    const startRow = Math.floor((cy - currentRadius) / gridSize);
                    const endRow = Math.ceil((cy + currentRadius) / gridSize);

                    for (let i = startCol; i <= endCol; i++) {
                        for (let j = startRow; j <= endRow; j++) {
                            const x = i * gridSize;
                            const y = j * gridSize;
                            const dx = cx - x;
                            const dy = cy - y;
                            const dist = Math.sqrt(dx * dx + dy * dy);

                            if (dist < currentRadius) {
                                const intensity = Math.pow(1 - dist / currentRadius, 2) * intensityMult;
                                const dotSize = 2 + (intensity * 3.5); 
                                
                                if (intensity > 0.01) {
                                    gCtx.beginPath();
                                    gCtx.fillStyle = `rgba(${activeTheme.accent}, ${intensity * 0.5})`; 
                                    gCtx.arc(x, y, dotSize / 2, 0, Math.PI * 2);
                                    gCtx.fill();
                                    
                                    if (intensity > 0.3) {
                                        gCtx.beginPath();
                                        gCtx.strokeStyle = `rgba(${activeTheme.accent}, ${intensity * 0.15})`;
                                        gCtx.lineWidth = 1;
                                        gCtx.moveTo(x - 4, y); gCtx.lineTo(x + 4, y);
                                        gCtx.moveTo(x, y - 4); gCtx.lineTo(x, y + 4);
                                        gCtx.stroke();
                                    }
                                }
                            }
                        }
                    }
                };

                renderLightSource(trail.x, trail.y, 300, 0.8);
                renderLightSource(ambient.x, ambient.y, 450, 0.5);

                for (let i = ripples.length - 1; i >= 0; i--) {
                    const r = ripples[i];
                    r.radius += 5; 
                    r.alpha -= 0.015; 
                    if (r.alpha <= 0) {
                        ripples.splice(i, 1);
                    } else {
                        gCtx.beginPath();
                        gCtx.strokeStyle = `rgba(${activeTheme.accent}, ${r.alpha})`;
                        gCtx.lineWidth = 2;
                        gCtx.arc(r.x, r.y, r.radius, 0, Math.PI * 2);
                        gCtx.stroke();
                        
                        if(r.radius < 50) {
                            gCtx.beginPath();
                            gCtx.fillStyle = `rgba(${activeTheme.accent}, ${r.alpha * 0.2})`;
                            gCtx.arc(r.x, r.y, r.radius * 0.8, 0, Math.PI * 2);
                            gCtx.fill();
                        }
                    }
                }
                requestAnimationFrame(drawGridHighlight);
            }
            drawGridHighlight();


            // === CANVAS 2: SIRKUIT ULAR (Fixed Clearing) ===
            const cCanvas = document.getElementById('circuit-canvas') as HTMLCanvasElement;
            const cCtx = cCanvas.getContext('2d');
            
            function resizeCircuit() { 
                gWidth = window.innerWidth; gHeight = window.innerHeight; 
                cCanvas.width = gWidth; cCanvas.height = gHeight;
                if(cCtx) cCtx.clearRect(0,0,gWidth, gHeight);
            }
            window.addEventListener('resize', resizeCircuit);
            resizeCircuit(); 

            class Tracer {
                x; y; dir; life; speed;
                constructor() { this.speed = 2; this.reset(); }
                reset() { 
                    this.x = Math.floor(Math.random() * (gWidth/gridSize)) * gridSize; 
                    this.y = Math.floor(Math.random() * (gHeight/gridSize)) * gridSize; 
                    this.life = Math.random() * 150 + 100; 
                    const dirs = [{x:1,y:0},{x:-1,y:0},{x:0,y:1},{x:0,y:-1}];
                    this.dir = dirs[Math.floor(Math.random()*4)];
                }
                update() { 
                    this.x += this.dir.x * this.speed; 
                    this.y += this.dir.y * this.speed; 
                    
                    if (cCtx) { 
                        cCtx.fillStyle = `rgb(${activeTheme.accent})`; 
                        cCtx.fillRect(this.x - 1, this.y - 1, 3, 3); 

                        if (Math.random() < 0.03) {
                            cCtx.beginPath();
                            cCtx.fillStyle = `rgba(${activeTheme.accent}, 0.3)`;
                            cCtx.arc(this.x, this.y, 6 + Math.random() * 6, 0, Math.PI * 2);
                            cCtx.fill();
                        }
                    } 
                    if (this.x % gridSize === 0 && this.y % gridSize === 0 && Math.random() < 0.3) {
                        const dirs = [{x:1,y:0},{x:-1,y:0},{x:0,y:1},{x:0,y:-1}];
                        this.dir = dirs[Math.floor(Math.random()*4)];
                    }
                    this.life--; 
                    if (this.x<0 || this.x>gWidth || this.y<0 || this.y>gHeight || this.life<=0) {
                        if (cCtx) {
                            cCtx.beginPath();
                            cCtx.fillStyle = `rgba(${activeTheme.accent}, 0.5)`;
                            cCtx.arc(this.x, this.y, 15, 0, Math.PI * 2); 
                            cCtx.fill();
                        }
                        this.reset(); 
                    }
                }
            }
            
            const tracers = [];
            for (let i = 0; i < 6; i++) { tracers.push(new Tracer()); }

            function animateCircuit() { 
                if (cCtx) { 
                    // CLEAR AGRESSIVE (No Ghosting)
                    cCtx.globalCompositeOperation = 'destination-out';
                    cCtx.fillStyle = 'rgba(0, 0, 0, 0.25)'; 
                    cCtx.fillRect(0, 0, gWidth, gHeight);
                    cCtx.globalCompositeOperation = 'source-over';
                } 
                tracers.forEach(t => t.update()); 
                requestAnimationFrame(animateCircuit); 
            }
            animateCircuit();
        </script>
        
        <style>
            /* ANIMASI RULER SCANNING */
            @keyframes scan-x {
                from { background-position: 0 0; }
                to { background-position: 20px 0; }
            }
            @keyframes scan-y {
                from { background-position: 0 0; }
                to { background-position: 0 20px; }
            }
            .animate-scan-x { animation: scan-x 4s linear infinite; }
            .animate-scan-y { animation: scan-y 4s linear infinite; }

            .bg-ruler-x {
                background-image: linear-gradient(to right, var(--color-ink) 1px, transparent 1px);
                background-size: 20px 100%;
            }
            .bg-ruler-y {
                background-image: linear-gradient(to bottom, var(--color-ink) 1px, transparent 1px);
                background-size: 100% 20px;
            }

            /* ANIMASI LOAD ON SCROLL (BLUR REVEAL) */
            .reveal-hidden {
                opacity: 0;
                filter: blur(8px);
                transform: scale(0.98) translateY(20px);
                transition: opacity 1s ease-out, filter 1s ease-out, transform 1s ease-out;
            }
            
            .reveal-visible {
                opacity: 1;
                filter: blur(0);
                transform: scale(1) translateY(0);
            }
        </style>
    </body>
</html>