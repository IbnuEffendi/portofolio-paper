<script>
    const homeView = document.getElementById('home-view');
    const galleryView = document.getElementById('gallery-view');
    const viewAllBtn = document.getElementById('view-all-projects-btn');
    const viewProjectsBtn = document.getElementById('view-projects-btn');
    const backHomeBtn = document.getElementById('back-home-btn');
    const logoLink = document.getElementById('logo-link');

    function showGallery() {
        homeView?.classList.add('hidden');
        galleryView?.classList.remove('hidden');
        setTimeout(() => { galleryView?.classList.remove('opacity-0', 'translate-y-12'); }, 50);
        window.scrollTo(0, 0);
    }
    function showHome() {
        galleryView?.classList.add('opacity-0', 'translate-y-12');
        setTimeout(() => { galleryView?.classList.add('hidden'); homeView?.classList.remove('hidden'); }, 700);
        window.scrollTo(0, 0);
    }
    viewAllBtn?.addEventListener('click', showGallery);
    viewProjectsBtn?.addEventListener('click', showGallery);
    backHomeBtn?.addEventListener('click', showHome);
    logoLink?.addEventListener('click', (e) => { if (!galleryView?.classList.contains('hidden')) { e.preventDefault(); showHome(); } });

    const filterBtns = document.querySelectorAll('.filter-btn');
    const projectItems = document.querySelectorAll('.project-item');
    filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const filter = btn.getAttribute('data-filter');
            filterBtns.forEach(b => b.classList.remove('active', 'border-accent', 'text-accent'));
            btn.classList.add('active', 'border-accent', 'text-accent');
            projectItems.forEach(item => {
                const categories = (item as HTMLElement).getAttribute('data-category');
                (item as HTMLElement).style.display = (filter === 'all' || categories?.includes(filter!)) ? 'block' : 'none';
            });
        });
    });

    const modal = document.getElementById('project-modal');
    const mTitle = document.getElementById('modal-title');
    const mDesc = document.getElementById('modal-desc');
    const mTech = document.getElementById('modal-tech');
    const mDate = document.getElementById('modal-date');
    const mImages = document.getElementById('modal-images');
    const mLink = document.getElementById('modal-project-link');
    const mLinkWrapper = document.getElementById('modal-link-wrapper');
    const lightbox = document.getElementById('lightbox-modal');
    const lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement;

    function openProjectModal(trigger: HTMLElement) {
        if (!modal || !mTitle || !mDesc || !mDate || !mTech || !mImages || !mLink || !mLinkWrapper) return;
        mTitle.textContent = trigger.getAttribute('data-title');
        mDesc.innerHTML = trigger.getAttribute('data-desc') || '';
        mDate.textContent = trigger.getAttribute('data-date');
        
        mTech.innerHTML = '';
        trigger.getAttribute('data-tech')?.split(',').forEach(t => {
            const s = document.createElement('span');
            s.className = 'bg-ink/5 px-3 py-1 rounded-full border border-ink/10';
            s.textContent = t.trim();
            mTech.appendChild(s);
        });

        mImages.innerHTML = '';
        trigger.getAttribute('data-images')?.split(',').forEach(src => {
            const img = document.createElement('img');
            img.src = src.trim();
            img.className = "h-20 w-auto border border-ink/10 grayscale hover:grayscale-0 cursor-zoom-in transition-all duration-700";
            img.onclick = () => { lightboxImg.src = img.src; lightbox?.classList.remove('hidden'); };
            mImages.appendChild(img);
        });

        const link = trigger.getAttribute('data-link');
        if (link && link !== '#') {
            (mLink as HTMLAnchorElement).href = link;
            mLinkWrapper.classList.remove('hidden');
        } else {
            mLinkWrapper.classList.add('hidden');
        }

        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }

    document.addEventListener('click', (e) => {
        const target = (e.target as HTMLElement).closest('.project-card-trigger, .project-item') as HTMLElement;
        if (target) openProjectModal(target);
    });

    document.getElementById('close-modal')?.addEventListener('click', () => { modal?.classList.add('hidden'); document.body.style.overflow = 'auto'; });
    document.getElementById('close-lightbox')?.addEventListener('click', () => { lightbox?.classList.add('hidden'); });
    lightbox?.addEventListener('click', (e) => { if(e.target === lightbox || e.target === lightboxImg) lightbox?.classList.add('hidden'); });
</script>

